<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <TextView
        android:id="@+id/IntroText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:textSize="50dp"
        android:textStyle="bold"/>

    <ProgressBar
        android:id="@+id/progressStart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"/>

    <LinearLayout
        android:id="@+id/imagesLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:alpha="0.1">

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/drumsStart"
                android:layout_width="259dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/drums" />
            <ImageView
                android:id="@+id/guitarStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/guitar"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/pianoStart"
                android:layout_width="259dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/piano" />
            <ImageView
                android:id="@+id/tablaStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tabla"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/violinStart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/violin" />

            <ImageView
                android:id="@+id/trumpetStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/trumpet" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>